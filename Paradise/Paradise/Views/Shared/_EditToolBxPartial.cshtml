@{
    Layout = null;
}
<!-- Modified from the Mozilla text editor example: https://developer.mozilla.org/en-US/docs/Rich-Text_Editing_in_Mozilla -->

<div id="toolbx" class="toolbox" onmouseenter="setTlBxActive('true')" onmouseleave="setTlBxActive('false')">
    @Scripts.Render("~/Scripts/editScript.js")
    <div id="toolBar1">
        <select onchange="formatDoc('fontname',this[this.selectedIndex].value);this.selectedIndex=0;">
            <option class="heading" selected>-Font-</option>
            <option style="font-family:Arial">Arial</option>
            <option style="font-family:Arial Black">Arial Black</option>
            <option style="font-family:Courier">Courier New</option>
            <option style="font-family:Times New Roman">Times New Roman</option>
            <option style="font-family:Montserrat-Light">Montserrat-Light</option>
            <option style="font-family:Montserrat-Regular">Montserrat-Regular</option>
            <option style="font-family:Quicksand-Bold">Quicksand-Bold</option>
        </select>
        <select onchange="formatDoc('fontsize',this[this.selectedIndex].value);this.selectedIndex=0;">
            <option class="heading" selected>-Font Size-</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="18">18</option>
            <option value="20">20</option>
            <option value="24">24</option>
            <option value="32">32</option>
            <option value="34">34</option>
            <option value="38">38</option>
            <option value="48">48</option>
            <option value="64">64</option>
            <option value="87">87</option>
            <option value="214">214</option>
        </select>
        <select id="fontColorDrpDwn" onchange="formatDoc('forecolor',this[this.selectedIndex].value);this.selectedIndex=0;">
            <option class="heading" selected>-Font Color-</option>
            <option style="color:#83a44a" value="#83a44a">Green</option>
            <option style="color:#8ebc3d" value="#8ebc3d">Light Green</option>
            <option style="color:#6E8D45" value="#6E8D45">Dark Green</option>
            <option style="color:#3f4ca3" value="#3f4ca3">Blue</option>
            <option style="color:#e83930" value="#e83930">Red</option>
            <option style="color:#474747" value="#474747">Dark Grey</option>
            <option style="color:#c3c3c3" value="#c3c3c3">Light Grey</option>
            <option style="color:#c3c3c3" value="#c3c3c3">Platinum</option>
            <option style="color:#632e1c" value="#632e1c">Brown</option>
            <option style="color:#000000" value="#000000">Black</option>
            <option style="color:#000000" value="#ffffff">White</option>
        </select>
    </div>
    <div id="toolBar2">
        <img class="tlBxIcon" title="Bold" onclick="formatDoc('bold');" src="~/Resources/Bold.png" />
        <img class="tlBxIcon" title="Italic" onclick="formatDoc('italic');" src="~/Resources/Italic.png" />
        <img class="tlBxIcon" title="Underline" onclick="formatDoc('underline');" src="~/Resources/Underline.png" />
        <img class="tlBxIcon" title="Align Left" onclick="formatDoc('justifyleft');" src="~/Resources/Left_align.png" />
        <img class="tlBxIcon" title="Center" onclick="formatDoc('justifycenter');" src="~/Resources/Center.png" />
        <img class="tlBxIcon" title="Align Right" onclick="formatDoc('justifyright');" src="~/Resources/Right_align.png" />
        <img class="tlBxIcon" title="Numbered list" onclick="formatDoc('insertorderedlist');" src="~/Resources/Numbered_list.png" />
        <img class="tlBxIcon" title="Bulleted list" onclick="formatDoc('insertunorderedlist');" src="~/Resources/Bulleted_list.png" />
        <img class="tlBxIcon" title="Quote" onclick="formatDoc('formatblock','blockquote');" src="~/Resources/Quote.png" />
        <img class="tlBxIcon" title="Delete indentation" onclick="formatDoc('outdent');" src="~/Resources/Delete_indent.png" />
        <img class="tlBxIcon" title="Add indentation" onclick="formatDoc('indent');" src="~/Resources/Add_indent.png" />
        <img class="tlBxIcon" title="Insert Link" onclick="var link = prompt('Enter the URL here', 'http:\/\/'); if (link && link != '' && link != 'http://') { formatDoc('createlink', link) };" src="~/Resources/Hyperlink.png" />
    </div>
</div>
@model IEnumerable<Paradise.Models.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EditLayout.cshtml";
}

<div class="container-fluid">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New Admin", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.superAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff.firstName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.superAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Staff.firstName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.admin_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.admin_ID }) |
                    @if (Session["isSuperAdmin"]?.ToString() == "True")
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.admin_ID })
                    }
                </td>
            </tr>
        }

    </table>
</div>